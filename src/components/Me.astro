<style lang="scss">
  @import "../styles/mixin.scss";
  .recent-project {
    margin-top: rem(70);
    @include bp(480) {
      margin-top: auto;
    }
    @include bp(1000) {
      max-width: 540px;
      width: 100%;
      margin-left: auto;
    }
    .svgHover {
      &:hover {
        path {
          fill: var(--c-green);
        }
      }
    }
    .-links {
      width: 22px;
      display: block;
      color: var(--c-gray-200);
      margin-top: rem(5);
    }
    .-title {
      color: var(--c-gray-400);
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    

    .-list {
      margin-top: rem(7);
      color: var(--c-gray-400);
      font-size: 14px;
      letter-spacing: 1px;
      background: hsl(var(--c-black-100));
      padding: 20px;
      border: 1px solid var(--c-black-200);
      line-height: 1.6;
      position: relative;
      --a: 10deg;
      &::after,
      &::before {
        content: "";
        position: absolute;
        background: linear-gradient(
          var(--a),
          rgba(255, 255, 255, 0.6),
          var(--c-black) 6%
        );
        opacity: 0;
        animation: glow 1s ease-out forwards 400ms;
        transition: 800ms;
      }
      &::after {
        top: 5px;
        left: 5px;
        right: 5px;
        bottom: 5px;
        z-index: -2;
        filter: blur(20px);
      }
      &::before {
        top: -2px;
        left: -2px;
        right: -2px;
        bottom: -2px;
        z-index: -1;
      }
    }

    .-list > li {
      display: flex;
      flex-flow: row wrap;
    }

    li {
      + li {
        border-top: 1px solid var(--c-black-200);
        margin-top: rem(20);
        padding-top: rem(20);
      }
      > .-description {
        // color: var(--c-gray-400);
        // font-size: 14px;
        // letter-spacing: 1px;
        // background: hsl(var(--c-black-100) / 0.6);
        // padding: 20px;
        // border: 1px solid var(--c-black-200);
        // line-height: 1.6;
        > a {
          font-size: rem(13);
          transition: 200ms;
          &:hover {
            color: var(--c-green);
          }
          &.-links {
            display: inline-flex;
            + a {
              margin-left: rem(15);
            }
          }
          &:has(svg) {
            display: inline-flex;
            + a {
              margin-left: rem(15);
            }
          }
        }
      }
    }
  }
  .me-image {
    position: relative;
    transition: 200ms;

    &:hover {
      .me {
        filter: blur(7px) opacity(0);
        &-png {
          filter: blur(0) opacity(1);
        }
      }
    }
  }
  .me {
    &-png {
      filter: blur(7px) opacity(0);
      position: absolute;
      top: 0;
      right: 0;
      left: 0;
      bottom: 0;
      margin: auto;
      transition: 300ms;
      max-width: rem(300);
      @include bp(1000) {
        left: inherit;
      }
    }
    @include bp(1000) {
      margin-left: auto;
      display: block;
      max-width: rem(300);
    }
  }
</style>
