---
import MetaHead from "../components/MetaHead.astro";
import Header from "../components/Header.astro";
---

<html lang="en">
  <head>
    <MetaHead
      title="Jech | Portfolio"
      description="My name is Jech and I'm a Freelance Web Developer and designer from the Philippines"
    />
    <style lang="scss">
      @import "../styles/mixin.scss";
      .anim.blur {
        filter: blur(5px) opacity(0);
        transform: translate(0, -10px);
      }
      .anim {
        filter: blur(0) opacity(1);
        transform: translate(0, 0);
        transition: transform 300ms, filter 300ms;
      }
      .container-grid {
        display: grid;
        grid-template-areas:
          "header"
          "content";
        @include bp(1000) {
          grid-template-rows: 10vh 90%;
          display: grid;
        }
      }
    </style>
  </head>
  <body>
    <div class="container-grid blur anim">
      <Header />
      <slot />
      <script defer>
        const animClass = document.querySelector(".anim");
        window.addEventListener("load", function () {
          animClass.classList.remove("blur");
        });
        window.onbeforeunload = function () {
          animClass.classList.add("blur");
        };
      </script>
    </div>
  </body>
</html>
